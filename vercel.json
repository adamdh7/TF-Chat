{
  "version": 2,
  "builds": [
    { "src": "api/generate.js", "use": "@vercel/node" },
    { "src": "public/**/*", "use": "@vercel/static" }
  ],
  "routes": [
    { "src": "/api/generate", "dest": "api/generate.js" },
    { "src": "/(.*)", "dest": "/public/$1" }
  ],
  "functions": {
    "api/generate.js": {
      "runtime": "nodejs18.x",
      "maxDuration": 60
    }
  }
}
